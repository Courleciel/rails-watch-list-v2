<div class="container mt-5">
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :movie_id, collection: Movie.all, label_method: :title, value_method: :id, prompt: 'Select a movie' %>
    <%= f.input :comment %>
    <%= f.submit class: "btn btn-warning rounded-pill"%>
  <% end %>
</div>
